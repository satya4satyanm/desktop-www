* {
    padding: 0;
    margin: 0; 
    overscroll-behavior: none;   
}
#game{
   position: absolute;
   transform-origin: 0 0;
   width: 100%;
   height: 100%;
   background-repeat: repeat;
   background-image: url("../images/wood.jpg");
   z-index:0;
   background-color: rgba(255, 255, 0, 0);
   background: transparent;
}

#size {
   text-align: center;
   overflow-x: hidden !important;
} 

#size ul {
   width: 96%;
}

#size ul li {
   margin: 0 0 10px 0;
   padding: 12px;
   color: #000;
   font-size: 25px;
}

#gallery {
   text-align: left;
}

#category {
   padding-right: 20px;
   box-sizing: border-box;
    width: calc(100% - 90px);
    height: calc(100% - 125px);
    text-align: left;
}

#category ul li img {
   width: 250px;
   height: 188px;
   box-shadow: 0 0 20px #000;
}

ul {
   list-style-type: none;
   padding: 0;
   margin: 0;
 }
 
 li {
   margin-top: -1px;
   display: inline-block;
   text-align: center;
   font-family: "Segoe UI", Helvetica, Arial;
   font-size: 20px;
   color: #ffffff;
   margin: 0 30px 30px 0;
   line-height: 25px;
 }

 li.list {
   border: 1px solid #ddd;
   padding: 10px;
   background-color: #f6f6f6;
   width: 100%;
 }
.wrap {
   overflow: visible;
   padding-top: 20px;
}

.cat-name {
   font-size: 24px !important;
}
.box {
   display: inline-block;
   position: relative;
   width: 250px;
   height: 225px;
   font-family: "Segoe UI", Helvetica, Arial;
   font-size: 20px;  
   color: #ffffff;
   margin: 0 30px 30px 0;
}
.boxInner {
   text-align: center;
   color: #ffffff;
   line-height: 26px;
}
.boxInner img {
   width: 100%;  
   box-shadow: 0 0 20px #000; 
}

#file-input {
   display: none;
}

#difficultyContainer {
   display: inline-block;
   vertical-align: middle;
}

#difficultyContainer .difficulty {
   width: 750px;
   height: 590px;
   margin: auto;
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translate(-50%, -50%);
   overflow: hidden;
}

#difficultyContainer .difficulty .head {
   background-color: #ffffff;
   color: #000000;
   padding: 5px;
   font-size: 20px;
}

#difficultyContainer .difficulty #imgHolder {
   background-color: #ffffff;
   text-align: center;
   height: 470px;
   line-height: 530px;
}

#difficultyContainer .difficulty #imgHolder img {
   width: auto;
   height: auto;
   max-height: 553px;
   max-width: 750px;
}

#difficultyContainer .difficulty #footer {
   background-color: rgba(0,0,0,0.8);
   position: absolute;
   border-top: 2px solid rgba(255,255,255,0.3);
   bottom: 0;
   width: 100%;
   z-index: 3;
}


#difficultyContainer .difficulty #footer .num {
   color: #ffffff;
   font-size: 28px;
}
#difficultyContainer .difficulty #footer .txt {
   color: #ffffff;
   font-size: 16px;
}

#difficultyContainer .difficulty #footer .dif {
   position: relative;
   display: inline-block;
   padding: 5px;
   background: rgba(0,0,0,0.5);
   width: 15.067%;
   text-align: center;
   color: #ffffff;
   font-weight: bold;
   border-left: 2px solid rgba(255,255,255,0.3);
   cursor: pointer;
}

#difficultyContainer .difficulty #footer .dif:first-child {
	border-left: 0;
}

#difficultyContainer .difficulty #footer .dif img {
   position: absolute;
   top: 0;
   left: 0;
}

@media screen and (max-width: 768px) {
   #btnBack {
      right: 91% !important;
   }
}

@media screen and (max-width: 360px) {
   #btnBack {
      right: 87% !important;
   }
}

